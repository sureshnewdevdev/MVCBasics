@model IEnumerable<MVCBasics.Model.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mark1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mark2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Average)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mark2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Average)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rank)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Rno">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Rno">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Rno">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
